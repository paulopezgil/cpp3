%scanner ../scanner/Scanner.h
%target-directory parser

%token ENDL
%token DOUBLE

%%

line:
    prompt ENDL
    {
        ACCEPT();
    }
|
    prompt command ENDL
    {
        parse();
    }
;

command:
    'm' DOUBLE
|
    's' DOUBLE
|
    DOUBLE
|
    DOUBLE DOUBLE   // integral values are also doubles
;

prompt:
{
    std::cout << "? ";
}
;